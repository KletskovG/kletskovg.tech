{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "paths": {
      "@types/*":  ["./src/types/*"],
      "@client/*": ["../client/*"],
      "@src/*": ["./src/*"],
    }
  },
  "quotemark": [
    true,
    "single",
    "jsx-double"
  ],
  "lib": ["es2015"]
}

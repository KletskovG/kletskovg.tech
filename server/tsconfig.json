{
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "src/*"
      ],
      "utils/*": [
        "./src/utils/*"
      ],
      "types/*": [
        "./src/types/*"
      ],
      "telegram/*": [
        "./src/telegram/*"
      ],
      "academy/*": [
        "./src/academy/*"
      ],
      "api/": [
        "./src/api/*"
      ],
      "const/": [
        "./src/const/*"
      ],
      "scrapper/": [
        "./src/scrapper/*"
      ],
      "lib/": [
        "./src/lib/*"
      ],
      "kraken/": [
        "./src/kraken/*"
      ],
      "logger/": [
        "./src/logger/*"
      ],
      "binance/": [
        "./src/binance/*"
      ],
      "db/": [
        "./src/db/*"
      ],
      "tinkoff/": [
        "./src/tinkoff/*"
      ],
    },
    "typeRoots": [
      "node_modules/@types",
      "./src/typings"
    ],
    "types": [
      "node",
      "express",
    ]
  },
  "include": [
    "src/*"
  ]
}